<div class = "row">
  <div class = "col-xs-6 col-xs-offset-3">
    <a href = '/signup'>Sign up</a>
    <a href = '/login'>Log in</a>
   <form method = "post" style = 'margin-top: 20px'>
     <div class="form-group">
       <label>Name</label>
       <input name = 'username' type="text" class="form-control" placeholder="Name" value = '{{signup.name}}' required>
     </div>
     <div class="form-group">
       <label>Password</label>
       <input name = 'password' type="text" class="form-control" placeholder="password" value = '{{signup.password}}' required>
     </div>
     <button type="submit" class="btn btn-primary">Login</button>
     <a type="submit" class="btn btn-primary" id = "fbLogin" href='/auth/facebook'>Login with Facebook</a>
   </form>
 </div>
</div>


<script>
  $(#fbLogin).click(function(e) {
    e.preventDefault();
    window.location.href = '/auth/facebook'
  })
</script>
